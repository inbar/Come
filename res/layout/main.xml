<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:id="@+id/l">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/username_label"
        android:layout_gravity="right"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_button"
        android:id="@+id/button"
        android:onClick="doLogout"
        android:layout_gravity="right"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_request_button"
        android:id="@+id/button3"
        android:width="360dp"
        android:onClick="doOpenFollowRequestDialog"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_requests_button"
        android:id="@+id/button2"
        android:width="360dp"
        android:onClick="doCheckRequests"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_lists_view_button"
        android:id="@+id/button4"
        android:onClick="doOpenListsView"
        android:width="360dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>